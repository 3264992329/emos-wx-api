<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.emos.wx.db.dao.TbCheckinDao">
    <select id="haveCheckin" resultType="integer" parameterType="hashmap">
        select id
        from tb_checkin
        where user_id=#{userId} and date=CURRENT_DATE
        and create_time between #{start} and #{end}
        limit 1
    </select>
    <insert id="insertCheckin" parameterType="com.example.emos.wx.db.pojo.TbCheckin">
        insert into tb_checkin
        set
            user_id=#{userId},
            <if test="address!=null">
                address=#{address},
            </if>
            <if test="country!=null">
                country=#{country},
            </if>
            <if test="province!=null">
                province=#{province},
            </if>
            <if test="city!=null">
                city=#{city},
            </if>
            <if test="district!=null">
                district=#{district},
            </if>
            <if test="status!=null">
                status=#{status},
            </if>
            <if test="risk!=null">
                risk=#{risk},
            </if>
            date=#{date},
            create_time=NOW()
    </insert>
</mapper>